@page "/todolist"
@using ToDoListBlazorWasm.Components;

<h1>To Do List</h1>

@if(Tasks == null){
    <LoadingIndicator></LoadingIndicator>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Priority
                </th>
                <th>
                    Assignee
                </th>
                <th>
                    Date
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Tasks)
            {
                <tr>
                    <td>
                        @item.TaskName
                    </td>
                    <td>
                        @item.Priority
                    </td>
                    <td>
                        @item.AssgineeName
                    </td>
                    <td>
                        @item.CreatedDate.ToString("hh:mm dd/MM/yyyy")
                    </td>
                    <td>
                        @item.Status
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


